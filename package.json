{
  "name": "superlit-core",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "platform/**",
      "framework/**",
      "tooling/**",
      "test-miniapp"
    ],
    "nohoist": [
      "**/@react-native-async-storage/async-storage",
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-codegen",
      "**/@callstack/repack",
      "**/@callstack/repack/**",
      "**/react-native-reanimated"
    ]
  },
  "scripts": {
    "miniapp:build": "rm -rf .bundle-output && yarn run miniapp:android:build && yarn run miniapp:ios:build",
    "miniapp:android:build": "mkdir -p .bundle-output/android && react-native bundle --entry-file platform/mobile/index.js --bundle-output .bundle-output/android/index.bundle --platform android --dev false --config metro.config.js --assets-dest .bundle-output/android",
    "miniapp:ios:build": "mkdir -p .bundle-output/ios && react-native bundle --entry-file platform/mobile/index.js --bundle-output .bundle-output/ios/index.bundle --platform ios --dev false --config metro.config.js --assets-dest .bundle-output/ios",
    "miniapp:web:build": "",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock && yarn install"
  },
  "dependencies": {
    "@callstack/repack": "^2.5.2",
    "@react-native-masked-view/masked-view": "^0.2.7",
    "@react-navigation/native": "^6.0.12",
    "@react-navigation/native-stack": "^6.8.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.27.2",
    "native-base": "^3.4.13",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-native": "0.69.5",
    "react-native-linear-gradient": "^2.6.2",
    "react-native-reanimated": "^2.10.0",
    "react-native-safe-area-context": "^4.3.3",
    "react-native-screens": "^3.17.0",
    "react-native-svg": "^13.1.0",
    "react-native-tab-view": "^3.1.1",
    "react-native-vector-icons": "^9.2.0",
    "react-native-web": "^0.17.7",
    "react-native-web-image-loader": "^0.1.1",
    "react-native-web-linear-gradient": "^1.1.2",
    "react-router-dom": "^6.3.0",
    "socket.io-client": "^4.5.2",
    "use-subscription": "^1.8.0",
    "valtio": "^1.7.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/cli": "9.0.0",
    "@react-native-community/cli-platform-android": "9.0.0",
    "@react-native-community/cli-platform-ios": "9.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.56",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/react-native": "^0.69.5",
    "@types/react-native-vector-icons": "^6.4.12",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.5",
    "babel-polyfill": "^6.26.0",
    "eslint": "^7.32.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "react-native-monorepo-tools": "^1.2.0",
    "react-test-renderer": "18.0.0",
    "terser-webpack-plugin": "^5.3.5",
    "ts-loader": "^9.3.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.4.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.1"
  }
}
